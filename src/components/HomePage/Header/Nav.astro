<style lang="scss">
    .nav {
        position: fixed;
        width: 100%;
        display: flex;
        justify-content: start;
        align-items: center;
        border-bottom: 1px solid #603b2a;
        padding-bottom: 10px;
        // background: rgba(255, 219, 172, 0.759);
        // box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        // backdrop-filter: blur(3px);
        // -webkit-backdrop-filter: blur(3px);
        // border: 1px solid rgb(0, 0, 0);

        &__icon {
            flex: 1;
            display: flex;
            justify-content: center;
            font-size: 30px;
            color: #603b2a;
            position: relative;
            left: 10px;
        }

        &__content {
            padding-top: 10px;
            width: 100%;
            height: 100%;
            align-items: center;
            display: flex;
            justify-content: space-around;
            align-items: center;

            &__title-container {
                &__title {
                    font-size: 20px;
                    font-weight: 900;
                    color: #603b2a;
                }

                &__subtitle {
                    font-size: 16px;
                    font-weight: 400;
                    color: #ff2e2e;
                }
            }

            &__widget-container {
                display: flex;
                gap: 10px;
                color: #603b2a;

                &__icon {
                    font-size: 30px;

                    &:visited {
                        color: #603b2a;
                    }
                }
            }
        }
    }
</style>

<script is:inline>
    const icon = document.querySelector(".nav__icon");
    const menuClosed = document.querySelector(".menu");
    icon.addEventListener("click", () => {
        menuClosed.style.animation = "appear .3s forwards";
    });
</script>

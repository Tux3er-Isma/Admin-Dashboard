---
const { icon, title, restaurant, link } = Astro.props;
---
<a href={link}>
<div class="tag" data-tag={restaurant}>
    <i class=`fa-solid fa-${icon} tag__icon`></i>
    <p class="tag__title">{title}</p>
</div></a>

<style lang="scss">
    .tag{
        display: flex;
        width: fit-content;
        padding: 10px;
        gap: 10px;
        align-items: center;
        border-radius: 5px;
    }

    .tag[data-tag="1"]{
        background-color: #fff;
        color: #000;
    }

    .tag[data-tag="2"]{
        background-color: #E21B1B;
        color: #fff;
    }

    .tag[data-tag="3"]{
        background-color: #FFA600;
        color: #000;
    } 
</style>